<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivityAllDetails"
    android:id="@+id/mainLayout"
    tools:showIn="@layout/app_bar_main_activity_all_details"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:weightSum="10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:id="@+id/dashboard"
                android:textColor="@color/colorAccent"
                android:textSize="34sp"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:elevation="10sp"
                android:fontFamily="sans-serif-condensed"
                />

        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="9"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="10sp"
            >
            <!--Column 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8sp"
                android:id="@+id/AttendanceId"
                android:layout_marginBottom="16sp"
                android:layout_marginRight="16sp"
                android:layout_marginLeft="16sp"
                app:cardElevation="18sp"
                >
                <TextView
                    android:layout_width="45sp"
                    android:layout_height="20sp"
                    android:paddingLeft="10sp"
                    android:text="Edit"
                    android:layout_marginRight="0sp"
                    android:background="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:id="@+id/admin_edit1"
                    android:visibility="gone"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    />


            </androidx.cardview.widget.CardView>

            <!--Column 2-->
            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8sp"
                android:id="@+id/ACID"
                android:layout_marginBottom="16sp"
                android:layout_marginRight="16sp"
                android:layout_marginLeft="16sp"
                app:cardElevation="18sp"
                >
                <TextView
                    android:layout_width="45sp"
                    android:layout_height="20sp"
                    android:paddingLeft="10sp"
                    android:text="Edit"
                    android:layout_marginRight="0sp"
                    android:background="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:id="@+id/admin_edit2"
                    android:visibility="gone"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Academic Calendar"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    />


            </androidx.cardview.widget.CardView>
            <!--Column 3-->
            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginRight="16sp"
                android:id="@+id/NotificationID"
                android:layout_marginLeft="16sp"
                app:cardElevation="18sp"
                >
                <TextView
                    android:layout_width="45sp"
                    android:layout_height="20sp"
                    android:paddingLeft="10sp"
                    android:text="Edit"
                    android:layout_marginRight="0sp"
                    android:background="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:id="@+id/admin_edit3"
                    android:visibility="gone"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    />


            </androidx.cardview.widget.CardView>
            <!--Column 4-->
            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8sp"
                android:id="@+id/homeWorkID"
                android:layout_marginBottom="16sp"
                android:layout_marginRight="16sp"
                android:layout_marginLeft="16sp"
                app:cardElevation="18sp"
                >
                <TextView
                    android:layout_width="45sp"
                    android:layout_height="20sp"
                    android:paddingLeft="10sp"
                    android:text="Edit"
                    android:layout_marginRight="0sp"
                    android:background="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:id="@+id/admin_edit4"
                    android:visibility="gone"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homeworks"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    />


            </androidx.cardview.widget.CardView>
            <!--Column 5-->
            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/SubjectID"
                app:cardCornerRadius="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginRight="16sp"
                android:layout_marginLeft="16sp"
                app:cardElevation="18sp"
                >
                <TextView
                    android:layout_width="45sp"
                    android:layout_height="20sp"
                    android:paddingLeft="10sp"
                    android:text="Edit"
                    android:layout_marginRight="0sp"
                    android:background="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:id="@+id/admin_edit5"
                    android:visibility="gone"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subjects"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    />


            </androidx.cardview.widget.CardView>
            <!--Column 5-->
            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8sp"
                android:layout_marginBottom="16sp"
                android:id="@+id/ResultID"
                android:layout_marginRight="16sp"
                android:layout_marginLeft="16sp"
                app:cardElevation="18sp"
                >
                <TextView
                    android:layout_width="45sp"
                    android:layout_height="20sp"
                    android:paddingLeft="10sp"
                    android:text="Edit"
                    android:layout_marginRight="0sp"
                    android:background="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:id="@+id/admin_edit6"
                    android:visibility="gone"
                    android:layout_gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>