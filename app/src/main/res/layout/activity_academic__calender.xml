    </LinearLayout>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_add_floating_home_24dp"
        android:layout_marginLeft="280dp"
        android:background="#ffffff"
        android:layout_marginTop="630dp"
